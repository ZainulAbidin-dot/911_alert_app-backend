model User {
  id            Int             @id @default(autoincrement())
  username      String
  email         String          @unique
  password      String
  role          Role[]
  User_Profile  User_Profile[]
  Residence     Residence[]
  Chat_Messages Chat_Messages[]
}

enum Role {
  Super_Admin
  Admin
  Dispatcher
  Trainee
  Member
}

model User_Profile {
  id                   Int      @id @default(autoincrement())
  realName             String
  pagerEmail           String
  notificationArea     String
  notificationTypes    String[]
  personalInfo         String
  sendToEmail          Boolean
  sendTextNotification Boolean
  sendToPager          Boolean
  phoneNo              Int
  carrier              String
  alertType            String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               Int
}

model Residence {
  id          Int      @id @default(autoincrement())
  city        String
  address     String
  state       String
  ZipCode     Int
  DateOfBirth DateTime
  Occupation  String
  user        User     @relation(fields: [userId], references: [id])

  userId Int
}

model Incident {
  id                 Int      @id @default(autoincrement())
  User_ID            Int      @unique
  Co_Credit          String
  Country            String
  Time               DateTime @default(now())
  Type               String
  Street             String
  City               String
  State              String
  Longitude          Float
  Latitude           Float
  Zipcode            Int
  Text               String
  SMS_Chr_Count      Int
  Internal_Note      String
  Confirmed_Incident Boolean

  @@index([User_ID])
}

model Chat_Messages {
  id        Int      @id @default(autoincrement())
  name      String
  Message   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Admin_Main_Setting {
  id                             Int     @id @default(autoincrement())
  system_name                    String  @default("911BreakingNews.com")
  backgroundColor                String  @default("#000000")
  fontColor                      String  @default("#ffffff")
  alertFormat                    String
  state_to_import_wheather_alert String  @default("DE")
  logo                           Bytes
  domain                         String  @default("cad.911breakingnews.com")
  CAD_URL                        String  @default("https://cad.911breakingnews.com/")
  private_system                 Boolean @default(true)
  guest_not_allowed_to_chat      Boolean @default(true)
  theme                          String  @default("Steal (2)")
  fontSize                       String  @default("16px")
  traineeAlertColor              String  @default("#663366")
}

model Admin_Email_SMS_Setting {
  id Int @id @default(autoincrement())
}
