model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  role         Role           @default(Member)
  User_Profile User_Profile[]
}

enum Role {
  Super_Admin
  Admin
  Dispatcher
  Trainee
  Member
}

model User_Profile {
  id        Int    @id @default(autoincrement())
  username  String
  phoneNo   Int
  carrier   String
  alertType String
  zipCode   Int
  cityState String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
}

model Incident {
  id                 Int      @id @default(autoincrement())
  User_ID            Int      @unique
  Co_Credit          String
  Country            String
  Time               DateTime @default(now())
  Type               String
  Street             String
  City               String
  State              String
  Longitude          Float
  Latitude           Float
  Zipcode            Int
  Text               String
  SMS_Chr_Count      Int
  Internal_Note      String
  Confirmed_Incident Boolean

  @@index([User_ID])
}
